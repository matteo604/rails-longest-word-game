<h1>New game</h1>

<div class="letters-container mt-4">
  <%= @letter_html %>
</div>
<p class="mt-5">What is the longest word you can find?</p>
<form action="/score" method="get" data-turbo="false" class="d-flex align-items-center">
  <input type="text" name="word" class="form-control mr-2" placeholder="Type your word" required style="width: auto;">
  <input type="submit" class="btn btn-success" value="Send">
  <%= hidden_field_tag :letters, @letters.join(',') %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
